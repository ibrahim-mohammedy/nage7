@page
@model ElTablet.Pages.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-sm-3  col-md-6 col-lg-6  col-xlg-6 "></div>
    <div class="col-xsm-12 col-sm-9  col-md-6 col-lg-6  col-xlg-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Question.Id" />
            <div class="form-group">
                <label asp-for="Question.Title" class="control-label"></label>
                <input asp-for="Question.Title" class="form-control" />
                <span asp-validation-for="Question.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Body" class="control-label"></label>
                <input asp-for="Question.Body" class="form-control" />
                <span asp-validation-for="Question.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.Answers" class="control-label"></label>
                <input asp-for="Question.Answers" class="form-control" />
                <span asp-validation-for="Question.Answers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question.CreatedBy" class="control-label"></label>
                <input asp-for="Question.CreatedBy" class="form-control" />
                <span asp-validation-for="Question.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">عودة للصفحة السابقة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}